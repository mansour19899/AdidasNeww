@model  AdidasNew.Models.EntityModels.countLists

@{
    ViewBag.Title = "DashBorad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Accordion.css" rel="stylesheet" />
@*<script src="/Scripts/jquery-3.3.1.js"></script>*@
<script src="~/Scripts/scriptAccordion.js"></script>

<script src="https://unpkg.com/ionicons@4.5.5/dist/ionicons.js"></script>

<style>

    .label1 {
        height: 120px;
        margin: 30px;
        padding-top: 30px;
        font-family: 'BTitrBd';
        color: whitesmoke;
        font-size: 20px;
        border-radius: 65px 0px 63px 0px;
        -moz-border-radius: 65px 0px 63px 0px;
        -webkit-border-radius: 65px 0px 63px 0px;
        border: 3px none #000000;
        -webkit-box-shadow: 18px 24px 5px -6px rgba(0,0,0,0.51);
        -moz-box-shadow: 18px 24px 5px -6px rgba(0,0,0,0.51);
        box-shadow: 18px 24px 5px -6px rgba(0,0,0,0.51);
    }
</style>
<aside class="aside">
    <div class="sidebar">
        <div class="sidebar-inner">
            <ul class="sidebar-menu">
                <li class="nav-item">
                    <a href="~/Admin/listnewperson">
                        <ion-icon style="color:orangered" class="icon" name="person-add"></ion-icon> <span>ثبت نام جدید </span>@{ if (Model.NewPersonUncheck != 0)
                            { <span class="recheck">@Model.NewPersonUncheck </span>}}
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Admin/ListConfirmedPerson">
                        <ion-icon style="color:darkgreen" class="icon" name="checkbox"></ion-icon> <span>تایید صلاحیت شده ها</span>@{ if (Model.ConfirmedPersonUncheck != 0)
                            { <span class="recheck">@Model.ConfirmedPersonUncheck </span>}}
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Admin/ListNotConfirmedPerson">
                        <ion-icon style="color:darkred" class="icon" name="hand"></ion-icon> <span>رد صلاحیت شده ها </span>@{ if (Model.NotConfirmedPersonUncheck != 0)
                            { <span class="recheck">@Model.NotConfirmedPersonUncheck </span>}}
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Admin/ListStaffs">
                        <ion-icon style="color:darkblue" class="icon" name="contact"></ion-icon> <span>پرسنل </span>@{ if (Model.NotStaffUncheck != 0)
                            { <span class="recheck">@Model.NotStaffUncheck </span>}}
                    </a>
                </li>
                <li class="nav-item"> <a href="~/Admin/listnewperson"> <ion-icon style="color:#000000" class="icon" name="walk"></ion-icon><span>اتمام همکاری </span></a></li>
                <li class="nav-item"> <a href="~/Admin/listnewperson"><ion-icon style="color:#ea0404" class="icon" name="close-circle"></ion-icon> <span>اخراج شده ها </span></a></li>
                <li class="nav-item"> <a href="~/UsersAdmin/Index"> <ion-icon style="color:#2e2368" class="icon" name="man"></ion-icon><span>ناظران </span></a></li>
            </ul>
        </div>     
    </div>

</aside>
<section class="section">
 

     <div class="amar-container">
         <div class="amar-div" style="background-color:darkgreen">
             <div class="amar iconamar"> <ion-icon name="add-circle"></ion-icon></div>
             <div class="amar">
                 <div>
                     <div>تعداد ثبت نام شده ها</div>
                     <div style="text-align:center;">@Model.CountRegister</div>
                 </div>

             </div>
         </div>
         <div class="amar-div" style="background-color:orangered">
             <div class="amar iconamar"> <ion-icon name="clipboard"></ion-icon></div>
             <div class="amar">
                 <div>
                     <div>تعداد بررسی نشده ها</div>
                     <div style="text-align:center;">@Model.CountUnCheck</div>
                 </div>

             </div>
         </div>
         <div class="amar-div" style="background-color:purple">
             <div class="amar iconamar"> <ion-icon name="contacts"></ion-icon></div>
             <div class="amar">
                 <div>
                     <div>تعداد پرسنل</div>
                     <div style="text-align:center;">@Model.CountStaff</div>
                 </div>

             </div>
         </div>



     </div>

</section>



@section scriptss{
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $("#menu").accordion();
            $(".colors a").click(function () {
                if ($(this).attr("class") != "default") {
                    $("#menu").removeClass();
                    $("#menu").addClass("menu").addClass($(this).attr("class"));
                } else {
                    $("#menu").removeClass();
                    $("#menu").addClass("menu");
                }
            });
        });
    </script>

}
