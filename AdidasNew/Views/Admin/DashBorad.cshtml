                        </a>


                    </div>

                    <div class="col-md-4 col-sm-6">
                        <a href="#" style="text-decoration:none;">
                            <div style="background-color:black" class="text-center label1">
                                افراد مستعفی
                            </div>
                        </a>


                    </div>

                    <div class="col-md-4 col-sm-6">
                        <a href="#" style="text-decoration:none;">
                            <div style="background-color:red" class="text-center label1">
                                اخراج شده
                            </div>
                        </a>


                    </div>
                </div>
            </div>



        </div>
    </div>
</section>



@section scriptss{
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $("#menu").accordion();
            $(".colors a").click(function () {
                if ($(this).attr("class") != "default") {
                    $("#menu").removeClass();
                    $("#menu").addClass("menu").addClass($(this).attr("class"));
                } else {
                    $("#menu").removeClass();
                    $("#menu").addClass("menu");
                }
            });
        });
    </script>

}
