                <li class="nav-item"> <a href="~/Admin/listnewperson"><ion-icon style="color:darkblue" class="icon" name="contact"></ion-icon> <span>پرسنل </span></a></li>
                <li class="nav-item"> <a href="~/Admin/listnewperson"> <ion-icon style="color:#000000" class="icon" name="walk"></ion-icon><span>اتمام همکاری </span></a></li>
                <li class="nav-item"> <a href="~/Admin/listnewperson"><ion-icon style="color:#ea0404" class="icon" name="close-circle"></ion-icon> <span>اخراج شده ها </span></a></li>
                <li class="nav-item"> <a href="~/UsersAdmin/Index"> <ion-icon style="color:#2e2368" class="icon" name="man"></ion-icon><span>ناظران </span></a></li>
            </ul>
        </div>     
    </div>

</aside>
<section class="section">
 
    <div>
        <div class="row">

            <div class="col-sm-12">
                <div class="row">
                    <div class="col-md-4 col-sm-6">
                        <a href="/admin/ListConfirmedPerson" style="text-decoration:none;">
                            <div style="background-color:darkgreen; " class="text-center label1 ">
                                <p>  افراد تایید صلاحیت شده</p>
                                <p>@Model.ConfirmedPerson نفر</p>

                            </div>
                        </a>

                    </div>
                    <div class="col-md-4 col-sm-6">
                        <a href="/admin/listnewperson" style="text-decoration:none;">
                            <div style="background-color:darkorange" class="text-center label1">
                                <p>افراد بررسی نشده</p>
                                <p>@Model.NewPerson نفر</p>
                            </div>
                        </a>


                    </div>
                    <div class="col-md-4 col-sm-6">
                        <a href="/UsersAdmin/Index" style="text-decoration:none;">
                            <div style="background-color:rebeccapurple" class="text-center label1">
                                ناظران
                            </div>
                        </a>


                    </div>

                    <div class="col-md-4 col-sm-6">
                        <a href="/admin/ListNotConfirmedPerson" style="text-decoration:none;">
                            <div style="background-color:darkred" class="text-center label1">
                                <p>افراد رد صلاحیت شده</p>
                                <p>@Model.NotConfirmedPerson نفر</p>
                            </div>
                        </a>


                    </div>

                    <div class="col-md-4 col-sm-6">
                        <a href="#" style="text-decoration:none;">
                            <div style="background-color:darkblue" class="text-center label1">
                                کارمندان
                            </div>
                        </a>


                    </div>

                    <div class="col-md-4 col-sm-6">
                        <a href="#" style="text-decoration:none;">
                            <div style="background-color:black" class="text-center label1">
                                افراد مستعفی
                            </div>
                        </a>


                    </div>
                    <div class="col-md-4 col-sm-6">
                        <a href="#" style="text-decoration:none;">
                            <div style="background-color:red" class="text-center label1">
                                اخراج شده
                            </div>
                        </a>

                    </div>
                </div>
            </div>
                  
         
        </div>
    </div>
</section>



@section scriptss{
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $("#menu").accordion();
            $(".colors a").click(function () {
                if ($(this).attr("class") != "default") {
                    $("#menu").removeClass();
                    $("#menu").addClass("menu").addClass($(this).attr("class"));
                } else {
                    $("#menu").removeClass();
                    $("#menu").addClass("menu");
                }
            });
        });
    </script>

}
