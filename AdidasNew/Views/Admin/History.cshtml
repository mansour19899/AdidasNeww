@model  IEnumerable<AdidasNew.Models.DomainModels.HistoryOfPerson>

@*@{

        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@

<h2>  hi</h2>

<div class="row table-responsive">

    @{
        if (Model != null)
        {
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr class="info">
                        <th  class="text-center col-xs-1">#</th>
                        <th class="text-center col-xs-2">عملیات</th>
                        <th class="text-center col-xs-5">توضیحات</th>
                        <th class="text-center col-xs-2">ناظر</th>
                        <th class="text-center col-xs-2">زمان</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int x = 0;
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(x = x + 1)</td>
                            <td>
                                @{
                                    if (item.Status == 1)
                                    {
                                        <span>رد صلاحیت</span>
                                    }
                                    else if (item.Status == 2)
                                    {
                                        <span>تایید صلاحیت</span>
                                    }
                                    else if (item.Status == 3)
                                    {

                                        <span>استخدام شدن </span>
                                    }
                                    else if (item.Status == 4)
                                    {

                                        <span>اخراج شد </span>
                                    }
                                    else if (item.Status == 5)
                                    {

                                        <span>قبول استعفا </span>
                                    }
                                }
                            </td>
                            <td>
                                @Html.Label(item.Description)

                            </td>
                            <td>
                                @Html.Label(item.User_Id_fk)
                            </td>
                            <td>
                                @Html.Label(item.RegDate.ToPersianDateString())----
                                @Html.Label(item.RegDate.ToShortTimeString())


                            </td>


                        </tr>
                    }




                </tbody>
            </table>
        }
    }

</div>
